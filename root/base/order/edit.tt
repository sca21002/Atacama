<script type="text/javascript">
    $(document).ready(function(){
        $("#pages").hide();
        
        
        $('#documenttype').click(function(){
            if ($('#documenttype').val() == '1') {
                $("#pages").fadeIn(500);
            }
            else {
                $("#pages").hide();
            }
        });
        
        
        
        
        $('label.strong').click(function(){
            $.ajax({
                type: "GET",
                url: "[% c.uri_for('edit') %]",
                dataType: "json",
                cache: false,
                success: function(json){
                    var $pq = $("<span>" + json.quote + "</span>");
                    $pq.hide();
                    if ($(".set").children().size() > 0) 
                        $(".set").append(" &middot; ");
                    $(".set").append($pq);
                    $pq.fadeIn();
                }
            });
        });
        
        
        
//        $("select option:selected").each(function(){
//            if ($("this").text() == "-- selected --") {
//                $("this").css("color", "red");
//            }
//            console.log($("select option:selected").text());
//        });
        
        
        
        
        
        for (var i = 0; i < $('ul#scanner li').length; i++) {
            $("select[name='scanparameters." + i + ".scanner_id']").manageFields({
                id: i
            });
        };
        
        $("select[name='scanparameters.0.scanner_id']").change(function(event){
            $("this").manageFields({
                id: '0'
            });
        });
        
        
        $("select[name='scanparameters.1.scanner_id']").change(function(event){
            $("this").manageFields({
                id: '1'
            });
        });
        
        $("select[name='scanparameters.2.scanner_id']").change(function(event){
            $("this").manageFields({
                id: '2'
            });
        });
        
        
        $("select[name='scanparameters.3.scanner_id']").change(function(event){
            $("this").manageFields({
                id: '3'
            });
        });
        
        
        $("select[name='scanparameters.4.scanner_id']").change(function(event){
            $("this").manageFields({
                id: '4'
            });
        });
        
        
    });
</script>
<h1 class="main"> Auftrag [% order_href.order_id %] bearbeiten</h1>
<div class="row">
    <div class="left">
        Auftragsnummer:
    </div>
    [% order_href.order_id %]
    [% IF order_href.scanfiles_count %]
    ( Scandateien:<a href="[% c.uri_for("/order/${order_href.order_id}/scanfiles/index") %]"> [%   order_href.scanfiles_count %]
 </a>
    )
    [% END %][% IF order_href.pdffiles_count %]
    ( PDF-Dateien:<a href="[% c.uri_for("/pdffile/${order_href.order_id}") %]"> [%   order_href.pdffiles_count %]
 </a>
    )
    [% END %]
</div>
<div class="row">
